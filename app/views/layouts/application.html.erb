<!DOCTYPE html>
<html>
  <head>
    <title>PropSuite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Montserrat&display=swap"
    />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,700;0,900;1,300;1,400&display=swap"
     rel="stylesheet">
    <script
      src="https://kit.fontawesome.com/5a1759509c.js"
      crossorigin="anonymous"
    ></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <%= render 'navbar/mobile_nav' %>
    </div>

      <% if notice %>
            <div class="alert-success">
          <p> <%= notice %> </p>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert-danger">
          <p> <%= alert %> </p>
        </div>
      <% end %>

      <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', async: true %>
    <%= yield %>
  </body>
</html>
