<div class="sidebar-container">
  <div class="avatar-zone">
    <div class="avatar-frame">

    <% if current_user.avatar.url.present? %>
       <%= image_tag(current_user.avatar.url, :class => "current-user-avatar") %>
    <% end %>
    </div>
    <p><%= current_user.fullname.upcase %></p>
  </div>
  <div class="followers-zone">
    <div>
      <h2>450</h2>
      <p>Following</p>
    </div>
    <div>
    <h2>460</h2>
    <p>Followers</p>
    </div>
  </div>
  <div class="nav-zone">
    <ul>
      <li>
        <i class="fas fa-home sidebar-icon"></i>
        <%= link_to 'Home', apartments_path %> 
      </li>
      <li>
          <i class="fas fa-user sidebar-icon"></i>
          <%= link_to 'Profile', edit_user_registration_path %>      
      </li>
      <li>
          <i class="fa fa-dashboard sidebar-icon"></i>
          <%= link_to 'Dashboard', user_path(current_user) %>      
      </li>
    </ul>
  </div>
</div>